@model IEnumerable<CovidTestManagementSystem.Models.TestRecord>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLTE.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ReportStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TestTypeId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TestTimeslot)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NurseId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReportStatus)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ReportStatus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TestTypeId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TestTimeslot)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NurseId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReportStatus)
            </td>
            <td>
                <a class="btn btn-outline-warning"asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a class="btn btn-outline-info"asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a class="btn btn-outline-danger"asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
