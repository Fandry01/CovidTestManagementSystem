@model CovidTestManagementSystem.Models.TestRecordVM
@using CovidTestManagementSystem.Enums
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_AdminLTE.cshtml";
}

<h1>Create</h1>

<h4>TestRecord</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TestRecord.TestAppointment.Id" class="control-label"></label>
                <input asp-for="TestRecord.TestAppointment.Id" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="TestRecord.TestAppointment.TestTypeId" class="control-label"></label>
                <input asp-for="TestRecord.TestAppointment.TestTypeId" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="TestRecord.TestAppointment.PatientId" class="control-label"></label>
                <input asp-for="TestRecord.TestAppointment.PatientId" class="form-control" readonly />
            </div>
            <div class="form-group">
                <div class="form-group">
                    <label asp-for="TestRecord.ReportStatus" class="control-label"></label>
                    @Html.DropDownListFor(q => q.TestRecord.ReportStatusId, new SelectList(Model.ReportStatuses, "Value", "Text"), "Select current status", new { @class = "form-control" })
                </div>
                <label asp-for="TestRecord.NurseId" class="control-label"></label>
                @Html.DropDownListFor(q => q.TestRecord.NurseId, new SelectList(Model.Nurses, "Value", "Text"), "Select Which Nurse", new { @class = "form-control" })
            </div>

            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="TestRecord.ToLab" /> @Html.DisplayNameFor(model => model.TestRecord.ToLab)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <label asp-for="TestRecord.TestResultId" class="control-label"></label>
                    @Html.DropDownListFor(q => q.TestRecord.TestResultId, new SelectList(Model.TestResults, "Value", "Text"), "Select result", new { @class = "form-control" })
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-outline-primary" asp-action="Index">Back to List</a>
</div>

